# MongoDB Connection String
MONGO_CONNECT=mongodb+srv://username:password@cluster.mongodb.net/hotel

# Frontend URL para CORS (en producción será la URL de Vercel)
FRONTEND_URL=http://localhost:5173

# Backend URL para webhooks (en producción será la URL de Vercel del backend)
BACKEND_URL=http://localhost:8080

# Entorno (development o production)
NODE_ENV=development

# Puerto del servidor (opcional, por defecto 8080)
PORT=8080

# MercadoPago
# Obtén tu Access Token en: https://www.mercadopago.com/developers/panel/app
# Para pruebas usa el Access Token de TEST
# Para producción usa el Access Token de PRODUCTION
MERCADOPAGO_ACCESS_TOKEN=TEST-1234567890-XXXXXX-abcdefghijklmnop-123456789

# Gmail para envío de emails (Nodemailer)
GMAIL_APP_USER=tu-email@gmail.com
GMAIL_APP_PASS=tu-app-password
